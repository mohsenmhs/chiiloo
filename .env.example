# WordPress Configuration
# Your WordPress site URL (without trailing slash)
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com
# OR use server-side only variable (more secure)
WORDPRESS_URL=https://your-wordpress-site.com

# WooCommerce Configuration (Optional)
# If you're using WooCommerce, provide these credentials
# You can generate them in WordPress: WooCommerce > Settings > Advanced > REST API
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# EmailJS Configuration (existing)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key
